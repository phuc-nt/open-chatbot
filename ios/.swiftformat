# SwiftFormat Configuration for OpenChatbot iOS Project
# Reference: https://github.com/nicklockwood/SwiftFormat

# File options
--exclude .build,DerivedData,OpenChatbot.xcodeproj

# Format options
--indent 4
--indentcase false
--trimwhitespace always
--insertlines true
--removelines true
--allman false
--wraparguments before-first
--wrapparameters before-first
--wrapcollections before-first
--closingparen balanced
--wrapreturntype if-multiline
--wrapconditions after
--wraptypealiases before-first
--funcattributes prev-line
--typeattributes prev-line
--varattributes same-line
--modifierorder public,internal,fileprivate,private,static,class,final,required,convenience,override,lazy,weak,unowned,optional,indirect,dynamic,mutating,nonmutating,prefix,postfix,infix
--shortoptionals always
--ranges no-space
--semicolons inline
--commas inline
--decimalgrouping 3,6
--binarygrouping 4,8
--octalgrouping 4,8
--hexgrouping 4,8
--hexliteralcase lowercase
--exponentcase lowercase
--hexgrouping 4,8
--fractiongrouping disabled
--exponentgrouping disabled
--patternlet hoist
--redundanttype inferred

--redundantparens false
--redundantget false
--redundantfileprivate false
--redundantrawvalues false
--redundantextensionacl false
--redundantobjc false
--redundantbreak false
--redundantclosure false
--redundantself remove
--redundantnil remove
--redundantlet remove
--redundantpattern remove
--redundantget remove
--redundantinit remove
--redundanttype inferred
